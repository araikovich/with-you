<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Together" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/title</item>
        <item name="colorPrimaryVariant">@color/sub_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:timePickerStyle">@style/MyTimePickerDark</item>
        <item name="android:colorAccent">@color/title</item>
    </style>

    <style name="MyTimePickerDark" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/accent</item>
        <item name="android:numbersTextColor">@color/title</item>
        <item name="android:numbersInnerTextColor">@color/title</item>
        <item name="android:numbersSelectorColor">@color/accent</item>
        <item name="android:textColorPrimaryInverse">@color/accent</item>
        <item name="android:numbersBackgroundColor">@color/sub_background</item>
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>